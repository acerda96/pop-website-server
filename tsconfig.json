{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"]
    },
    "typeRoots": ["./custom_typings", "./node_modules/@types"],
    "rules": {
      "no-console": false
    }
  },
  "include": ["src/**/*"]
}
